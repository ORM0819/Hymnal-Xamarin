<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    x:Class="Hymnal.Resources.Styles.LightTheme"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <x:Double x:Key="Opacity.BackgroundMainPageFilter">0</x:Double>
    <!--  White filter for lists  -->
    <x:Double x:Key="Opacity.BackgroundFilter">0.5</x:Double>

    <!--  White filter for Hymns letters  -->
    <x:Double x:Key="Opacity.BackgroundHymnLettersFilter">0.6</x:Double>

    <Color x:Key="Color.Primary">#4c555a</Color>
    <!--  Placeholder  -->
    <Color x:Key="Color.PrimaryLight">#788187</Color>

    <!--  Slider's thumb and slider's minimum color, Open button  -->
    <!--  before: 24b780  -->
    <Color x:Key="Color.Accent">#488286</Color>

    <Color x:Key="Color.PrimaryText">#000000</Color>
    <Color x:Key="Color.SecondaryText">#666666</Color>
    <Color x:Key="Color.NavBarText">#ffffff</Color>

    <!--  Background in Navigation and Tab Bar  -->
    <Color x:Key="Color.PrimaryBackground">#000000</Color>
    <Color x:Key="Color.SecondaryBackground">#ffffff</Color>
    <Color x:Key="Color.BackgroundHymnLettersFilter">#ffffff</Color>

    <Color x:Key="Color.SelectedTab">#f00</Color>
    <Color x:Key="Color.UnselectedTab">#fff</Color>
    <Color x:Key="Color.BackgroundTab">#4c555a</Color>

</ResourceDictionary>
