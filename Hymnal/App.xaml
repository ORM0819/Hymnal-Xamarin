<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="Hymnal.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:Hymnal.Converters"
    xmlns:local="clr-namespace:Hymnal"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />

                <ResourceDictionary Source="Resources/Styles/IconFonts.xaml" />

                <ResourceDictionary Source="Resources/Styles/StaticTheme.xaml" />
                <ResourceDictionary Source="Resources/Styles/LightTheme.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!--  Fonts  -->
            <x:String x:Key="Fonts.OpenSansRegular">OpenSansRegular</x:String>
            <x:String x:Key="Fonts.OpenSansSemibold">OpenSansSemibold</x:String>

            <!--  Images  -->
            <x:String x:Key="BackgroundImageFile">wide_background.png</x:String>
            <!--<x:String x:Key="BackgroundImageFile">dotnet_bot</x:String>-->

            <!--  Converters  -->
            <converters:HymnImageNameConverter x:Key="HymnImageNameConverter" />
        </ResourceDictionary>
    </Application.Resources>

</Application>
